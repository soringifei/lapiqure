rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function hasRole(role) {
      return request.auth != null && 
             get(/databases/$(database)/documents/crm_staff/$(request.auth.uid)).data.role == role;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    function isManager() {
      return hasRole('manager') || isAdmin();
    }

    function isStaff() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /crm_customers/{customerId} {
      allow list: if isStaff();
      allow read: if isStaff();
      allow create: if isManager();
      allow update: if isManager();
      allow delete: if isAdmin();
    }

    match /crm_orders/{orderId} {
      allow list: if isStaff();
      allow read: if isStaff();
      allow create: if isManager();
      allow update: if isManager();
      allow delete: if isAdmin();
    }

    match /crm_interactions/{interactionId} {
      allow list: if isStaff();
      allow read: if isStaff();
      allow create: if isStaff();
      allow update: if resource.data.staffId == request.auth.uid || isManager();
      allow delete: if isAdmin();
    }

    match /crm_campaigns/{campaignId} {
      allow list: if isStaff();
      allow read: if isStaff();
      allow create: if isManager();
      allow update: if isManager();
      allow delete: if isAdmin();
    }

    match /crm_staff/{staffId} {
      allow list: if isManager();
      allow read: if isManager() || request.auth.uid == staffId;
      allow create: if isAdmin();
      allow update: if isAdmin() || request.auth.uid == staffId;
      allow delete: if isAdmin();
    }

    // CRM products - publicly readable so storefront can show products
    match /crm_products/{productId} {
      // Public read/list for storefront
      allow list: if true;
      allow read: if true;
      // Managers and admins can create/update or delete products
      allow create: if isManager();
      allow update: if isManager();
      allow delete: if isManager();
    }

    // CRM collections - publicly readable so storefront can group products
    match /crm_collections/{collectionId} {
      allow list: if true;
      allow read: if true;
      allow create: if isManager();
      allow update: if isManager();
      allow delete: if isAdmin();
    }

    // CMS page content - publicly readable so storefront can render pages
    match /crm_content/{contentId} {
      allow list: if true;
      allow read: if true;
      allow create: if isManager();
      allow update: if isManager();
      allow delete: if isAdmin();
    }
    
    match /orders/{orderId} {
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.data.userId || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /restockNotifications/{notificationId} {
      allow create: if true;
      allow read, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /newsletter/{email} {
      allow create: if true;
      allow read, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /waitlist/{entryId} {
      allow create: if true;
      allow read, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
